#include <iostream>

using namespace std;


//deklarasi struct
struct mhs { //deklarasi tipe struct

char nama[30];
int stambuk;
float nilai;

} ;
void display(struct mhs st)
{

cout << "Stambuk : " << st.stambuk ;
cout << "\nNama : " << st.nama ;
cout << "\nNilai : " << st.nilai ;

}
int main()
{

mhs data_mahasiswa;
cout <<"Stambuk : â€œ; std::cin>>data_mahasiswa.stambuk;
cout <<"Nama : "; std::cin>>data_mahasiswa.nama;
cout <<"Nilai : ";std::cin>>data_mahasiswa.nilai;
display(data_mahasiswa);
return 0;
